<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.google.android.as.oss.conversationid.service">
  <uses-sdk android:minSdkVersion="31" android:targetSdkVersion="36"/>

  <queries>
    <package android:name="com.google.android.inputmethod.latin"/>
  </queries>

  <application>
    <service
      android:name="com.google.android.as.oss.conversationid.service.ConversationIdUpdateService"
      android:exported="true"
      tools:ignore="ExportedService">  <!-- Only Android intelligence platform is allowed to bind to this service. -->
    </service>
    <service
      android:name="com.google.android.as.oss.conversationid.service.ConversationIdListenerService"
      android:exported="true"
      tools:ignore="ExportedService"> <!-- Only Gboard is allowed to bind to this service at this moment. -->
    </service>
  </application>
</manifest>
